<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Summary</th>
      <th>Content</th>
      <th>Workflow state</th>
      <th>Author</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.summary %></td>
        <td><%= article.content %></td>
        <td><%= article.workflow_state %></td>
        <td><%= article.author %></td>
        <td style='width:12em'>
          <%= button_to 'Submit', submit_article_path(article) if article.new? %>
          <%= button_to 'Review', review_article_path(article) if article.awaiting_review? %>
          <%= button_to 'Accept', accept_article_path(article) if article.being_reviewed? %>
          <%= button_to 'Reject', reject_article_path(article) if article.being_reviewed? %>
        </td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
